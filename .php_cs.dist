<?php

$finder = Symfony\Component\Finder\Finder::create()
    ->in([
        __DIR__ . '/src',
        __DIR__ . '/tests',
    ])
    ->name('*.php')
    ->ignoreDotFiles(true)
    ->ignoreVCS(true);

$rules = LiveIntent\PHPCsRules::getRules();

return (new PhpCsFixer\Config())
    ->setRules($rules)
    ->setFinder($finder);
